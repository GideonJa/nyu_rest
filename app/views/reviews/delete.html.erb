<%@page_title ="Delete Review #{@review.reviewer_id}"%>
<div id="nav">
<ul>
<li><%= link_to(" << Back to list", {:action => "list", :restaurant_id => @curr_restaurant.id}) %></li>
</ul>
</div>

<div class="review delete">
	<h2>Showing Review <%=@review.id%> </h2>


<%= form_for(:review, :url=> {:action => 'destroy', :id => params[:id], :restaurant_id => @curr_restaurant.id, :method=>'POST'}) do |f| %>

	<%= render(:partial =>"form", :locals => {:f => f}) %>

	<div class="form-buttons">
	<%= submit_tag("Delete Review")%>    <%=submit_tag("Cancel")%>
	</div>
	
	<%end%>
</div>
